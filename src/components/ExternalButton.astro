---
import { Icon } from 'astro-icon/components'
interface Props {
    text: string;
    link: string;
    icon: string;
    textColor?: string;
    bgColor?: string;
    iconSize?: number;
    externalIconSize?: number
    iconDisplay?: string
}

const { iconDisplay = "block", text, link, icon, textColor = "black", iconSize = 20, bgColor = "blue-500", externalIconSize = 15} = Astro.props;
---

<div class=`w-fit rounded bg-${bgColor}`>
    <a target="_blank" href={link} class=`flex p-3 text-${textColor} justify-center gap-1 items-center decoration-inherit text-inherit block h-full`>
        <Icon class={iconDisplay} size={iconSize} name={icon} />
        { text }
        <Icon size={externalIconSize} name="mdi:external-link" />
    </a>
</div>